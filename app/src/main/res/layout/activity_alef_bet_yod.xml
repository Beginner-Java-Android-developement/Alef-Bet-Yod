<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    tools:context=".AlefBetYodActivity">

    <TextView
        android:layout_gravity="center" android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="35dp" android:textSize="25dp" android:textColor="#00FFFF"
        android:text="לימוד אלף בית"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" android:layoutDirection="ltr" android:textDirection="ltr"
        >

    <ImageView
        android:layout_gravity="center"
        android:layout_width="280dp"
        android:layout_height="260dp"
        android:id="@+id/ivDisplay"
        />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageButton
                android:layout_marginTop="40dp"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:id="@+id/btnUp"
                android:text="Up"
                android:background="@mipmap/red_up_arrow"
                />

            <ImageButton
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:id="@+id/btnDown"
                android:text="Down"
                android:background="@mipmap/green_down_arrow"
                />

            <ImageButton
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:id="@+id/btnPlay"
                android:text="Play"
                android:background="@mipmap/play"
                />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/tvDisplayAlefBet"
        android:background="#aba"
        android:textSize="20dp"
        android:textColor="#5A0220"
        android:hint="א ב ... י"
        />

</LinearLayout>